{
  "name": "@daniel-rose/envex",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test:unit": "vitest",
    "test:unit:ci:pre": "playwright install",
    "test:unit:ci": "pnpm run test:unit:ci:pre && vitest --run --coverage --outputFile=coverage/junit.xml --reporter=junit --browser.headless"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./script": {
      "types": "./dist/script.d.ts",
      "require": "./dist/script.cjs",
      "import": "./dist/script.js"
    },"./dev-tools": {
      "types": "./dist/dev-tools.d.ts",
      "require": "./dist/dev-tools.cjs",
      "import": "./dist/dev-tools.js"
    }
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19",
    "next": "^15"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/node": "^22.15.30",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.0.0",
    "playwright": "^1.53.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup-plugin-node-externals": "^8.0.0",
    "rollup-preserve-directives": "^1.1.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.3",
    "vitest-browser-react": "^0.2.0"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
